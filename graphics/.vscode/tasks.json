{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Linux",
            "command": "/usr/bin/g++",
            "args": [
                "-ggdb",
                "-std=c++23",
                "-DAUTO_LOG_EXCEPTION_JPL",
                "-DUSE_STACKTRACE_W_EXCEPTION_JPL",
                "${workspaceFolder}/Main.cpp", 
                "-lloggerJPL",
                "-fno-rtti",
                "-Wterminate",
                "-o",
                "${workspaceFolder}/out/linux/Main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Windows Client",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++23",
                "-DAUTO_LOG_EXCEPTION_JPL",
                "-DUSE_STACKTRACE_W_EXCEPTION_JPL",
                "-DUSE_LOGGER_JPL",
                "${workspaceFolder}/src/Metrics.cpp",
                "${workspaceFolder}/src/mesh/Mesh.cpp",
                "${workspaceFolder}/src/engine/Painter.cpp",
                "${workspaceFolder}/src/shaders/Shader.cpp",
                "${workspaceFolder}/src/shaders/ProgramShaders.cpp",
                "${workspaceFolder}/src/shaders/ProgramManager.cpp",
                "${workspaceFolder}/src/input/Keyboard.cpp",
                "${workspaceFolder}/src/input/Mouse.cpp",
                "${workspaceFolder}/src/utils/Window.cpp",
                "${workspaceFolder}/src/engine/camera/BaseCamera.cpp",
                "${workspaceFolder}/src/engine/camera/OrthoCamera.cpp",
                "${workspaceFolder}/src/engine/camera/PerspectiveCamera.cpp",
                "${workspaceFolder}/src/engine/text/Font.cpp",
                "${workspaceFolder}/src/engine/text/TextRender.cpp",
                "${workspaceFolder}/Main.cpp",
                "-lglfw3",
                "-lglew32",
                "-lOpengl32",
                "-lloggerJPL",
                "-lparserJPL",
                "-o",
                "${workspaceFolder}/out/windows/Main.exe"
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "shell",
            "label": "Start GDBServer x WIN",
            "isBackground": true,
            "command": "/usr/x86_64-w64-mingw32/sys-root/mingw/bin/gdbserver.exe",
            "args": [
                ":1234",
                "${workspaceFolder}/out/windows/Main.exe"
            ],
            // This task is run before some debug tasks.
            // Problem is, it's a watch script, and since it never exits, VSCode
            // complains. All this is needed so VSCode just lets it run.
            "problemMatcher": [
                {
                "pattern": [
                    {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                }
                }
            ]
        }
    ],
    "version": "2.0.0"
}