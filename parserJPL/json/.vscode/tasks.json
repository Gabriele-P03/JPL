{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build For Linux",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/include/JSONArray.cpp",
                "${workspaceFolder}/include/JSONMap.cpp",
                "${workspaceFolder}/include/JSONObject.cpp",
                "${workspaceFolder}/include/JSONReader.cpp",
                "${workspaceFolder}/Main.cpp",
                "-DUSE_LOGGER_JPL",
                "-o",
                "${workspaceFolder}/out/Main",
                "-lLoggerJPL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "C/C++: g++ build For Windows",
            "command": "x86_64-w64-mingw32-g++",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/include/JSONArray.cpp",
                "${workspaceFolder}/include/JSONMap.cpp",
                "${workspaceFolder}/include/JSONObject.cpp",
                "${workspaceFolder}/include/JSONReader.cpp",
                "${workspaceFolder}/Main.cpp",
                "-DUSE_LOGGER_JPL",
                "-o",
                "${workspaceFolder}/out/Main.exe",
                "-lLoggerJPL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }

    ],
        
    "version": "2.0.0"
}