{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Linux",
            "command": "/usr/bin/g++",
            "args": [
                "-ggdb",
                "-std=c++23",
                "${workspaceFolder}/Main.cpp",
                "${workspaceFolder}/src/debug/Profiler.cpp",
                "-ldl",
                "-Wterminate",
                "-o",
                "${workspaceFolder}/out/linux/Main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Windows Client",
            "command": "g++",
            "args": [
                "-g",
                "-static",
                "-std=c++23",
                "${workspaceFolder}/Main.cpp",
                "-ldbghelp",
                "-LC:\\msys64\\mingw64\\lib\\jpl",
                "-lloggerJPL_1_0_0",
                "-o",
                "${workspaceFolder}/out/windows/Main.exe"
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}