{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Linux",
            "command": "/usr/bin/g++",
            "args": [
                "-ggdb",
                "-std=c++23",
                "${workspaceFolder}/src/debug/stacktrace/wrapper/StacktraceWrapper.cpp",
                "${workspaceFolder}/src/debug/stacktrace/Stacktrace.cpp",
                "${workspaceFolder}/src/debug/Profiler.cpp",
                "${workspaceFolder}/src/structure/db/columns/Column.cpp",
                "${workspaceFolder}/src/structure/db/Table.cpp",
                "${workspaceFolder}/src/structure/db/TableWrapper.cpp",
                "${workspaceFolder}/src/StringUtils.cpp",
                "${workspaceFolder}/Main.cpp", 
                "-Wterminate",
                "-o",
                "${workspaceFolder}/out/linux/Main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Windows Client",
            "command": "x86_64-w64-mingw32-g++",
            "args": [
                "-g",
                "-std=c++23",
                "${workspaceFolder}/Main.cpp",
                "${workspaceFolder}/src/debug/stacktrace/wrapper/StacktraceWrapper.cpp",
                "-ldbghelp",
                "-o",
                "${workspaceFolder}/out/windows/Main.exe"
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "shell",
            "label": "Start GDBServer x WIN",
            "isBackground": true,
            "command": "/usr/x86_64-w64-mingw32/sys-root/mingw/bin/gdbserver.exe",
            "args": [
                ":1234",
                "${workspaceFolder}/out/windows/Main.exe"
            ],
            // This task is run before some debug tasks.
            // Problem is, it's a watch script, and since it never exits, VSCode
            // complains. All this is needed so VSCode just lets it run.
            "problemMatcher": [
                {
                "pattern": [
                    {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                }
                }
            ]
        }
    ],
    "version": "2.0.0"
}