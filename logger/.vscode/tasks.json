{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Linux Server",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/Main.cpp",
                "-lLoggerJPL",
                "-o",
                "${workspaceFolder}/out/linux/Main",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Windows Client",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++23",
                "-DAUTO_LOG_EXCEPTION_JPL",
                "-DUSE_STACKTRACE_W_EXCEPTION_JPL",
                "${workspaceFolder}/src/LoggerWrapper.cpp",
                "${workspaceFolder}/src/Logger.cpp",
                
                "${workspaceFolder}/Main.cpp",
                "-lutilsJPL",
                "-ldbghelp",
                "-fno-rtti",
                "-o",
                "${workspaceFolder}/out/windows/Main.exe"
                
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }

    ],
    "version": "2.0.0"
}